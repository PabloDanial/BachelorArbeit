<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".activities.IntroActivity">

    <TextView
            android:id="@+id/tv_name_start_game_page_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start Game"
            android:textSize="70sp"
            android:gravity="center"
            android:textStyle="bold|italic"/>

    <ImageView
            android:id="@+id/tv_start_game_image_body"
            android:layout_width="wrap_content"
            android:layout_height="800px"
            android:layout_marginTop="16dp"
            android:contentDescription="bodyImage"
            android:src="@drawable/introstartimage"
            />

    <TextView
            android:id="@+id/Anleitung"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:text="Anleitung"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
    />

    <Button
          android:id="@+id/btn_start_game"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="16dp"
          android:paddingTop="16dp"
          android:paddingBottom="16dp"
          android:background="@drawable/blue_border_shape_button_rounded"
          android:text="Let's Go"
          android:textSize="20dp"
          />


</LinearLayout>