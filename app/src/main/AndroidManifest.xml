<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.android.dialliguapp">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.DialLiguApp">
        <activity
                android:name=".ui.InstructionsActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.GameNavigator"
                android:exported="true"/>
        <activity
                android:name=".ui.AdminActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.PlayerActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.IntroActivity"
                android:exported="true"
                android:theme="@style/Theme.DialLiguApp.NoActionBar"/>
        <activity
                android:name=".ui.SplashActivity"
                android:exported="true"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.DialLiguApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.MainActivity"
                android:exported="true">
        </activity>
    </application>

</manifest>